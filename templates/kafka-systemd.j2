[Unit]
Description=Kafka
Before=
After=network.target

[Service]
Environment='KAFKA_JMX_OPTS=-javaagent:{{ kafka_dir }}/metrics/jmx_prometheus_javaagent.jar={{ kafka_metrics_port }}:{{ kafka_dir }}/metrics/metrics.yaml'
User=kafka
ExecStart=/usr/bin/kafka-server-start {{ kafka_dir }}/kafka-server.properties
Restart=on-abort

[Install]
WantedBy=multi-user.target
